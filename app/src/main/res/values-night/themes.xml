<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.StatusDownloader" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/appColor</item>
    </style>
    <style name="tabLayout">
        <item name="android:textSize">17sp</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textNormal">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/light</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="SplashScreenBackgroundColor">
          <item name="backgroundColor">@color/black</item>
    </style>
    <style name="splashScreenText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textHeading">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/bold</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MyCustomBackground">
        <item name="backgroundColor">@color/appContainerColor</item>
    </style>


    <style name="RadioButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#43A047</item>
        <item name="android:textColorSecondary">#3949AB</item>
        <item name="colorControlNormal">#C32222</item>
    </style>
</resources>